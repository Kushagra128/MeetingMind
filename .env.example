# MeetingMing Environment Configuration
# Copy this file to .env and update with your values

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-immediately
JWT_SECRET_KEY=your-jwt-secret-key-change-this-immediately

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=0

# Database Configuration (if using PostgreSQL instead of SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/meetingming

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Configuration
MAX_CONTENT_LENGTH=524288000  # 500 MB in bytes

# Optional: AWS S3 Configuration (for cloud file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=meetingming-uploads
# AWS_REGION=us-east-1

# Optional: Email Configuration (for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@meetingming.com

# Optional: Monitoring and Logging
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=INFO
